<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/imageView_artist_listItem"
        style="@style/imageMarginNormal"
        android:layout_width="@dimen/images_dimension"
        android:layout_height="@dimen/images_dimension" />

    <TextView
        android:id="@+id/textView_artist_listItem"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:gravity="center_vertical"
        android:textColor="@color/gray_item_text" />
</LinearLayout>